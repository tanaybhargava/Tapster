<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_red_light"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/string_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:maxWidth="200dp"
            android:padding="0dp"
            android:text="Order:"
            android:textAlignment="inherit"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_row="2"
            android:text="Add:"
            android:textSize="15sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/string_total1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:layout_row="5"
            android:maxLines="1"
            android:text="Total:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="2"
            android:text="Add"
            android:textSize="10sp" />

        <Spinner
            android:id="@+id/spinner_add"
            android:layout_width="133dp"
            android:layout_height="29dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical|center_horizontal|center|start"
            android:layout_row="2"
            android:spinnerMode="dropdown" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_Confirm"
            android:layout_height="40dp"
            android:layout_gravity="fill_horizontal|left"
            android:text="Place Order"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_Cancel"
            android:layout_height="40dp"
            android:layout_gravity="fill_horizontal|right"
            android:text="Cancel"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />
    </GridLayout>

</LinearLayout>