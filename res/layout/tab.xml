<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/tabList"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_weight="1.35" >
    </ListView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:columnCount="11"
        android:rowCount="2" >

        <TextView
            android:id="@+id/string_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="tip: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/string_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="10"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:text="Total:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/button_15"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textOff="15%"
            android:textOn="15%"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/button_20"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textOff="20%"
            android:textOn="20%"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/button_30"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textOff="30%"
            android:textOn="30%"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/button_customAmount"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_column="8"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textOff="Custom"
            android:textOn="Custom"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/Text_customTip"
            android:layout_column="2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:ems="10"
            android:inputType="number"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_tip_done"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Set tip"
            android:visibility="gone" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView_CC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:text="credit card:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_CC"
            android:layout_width="210dp"
            android:layout_height="24dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_Pay"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="Pay Now" />

    </LinearLayout>

</LinearLayout>